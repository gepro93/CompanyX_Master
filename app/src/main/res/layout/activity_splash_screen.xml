<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@drawable/ic_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:id="@+id/iwLogo"
        android:alpha="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make the company life easier..."
        android:layout_below="@id/iwLogo"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="70sp"
        android:id="@+id/twLogo"
        android:alpha="0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 %"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="21sp"
        android:layout_below="@id/twLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80sp"
        android:id="@+id/twPrecentage"
        android:alpha="0"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/twPrecentage"
        style="@style/Widget.AppCompat.ProgressBar"
        android:id="@+id/progressBar"
        android:alpha="0"/>

</RelativeLayout>