<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/twLaptopBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/button_menu_laptop"
            android:text="Lenovo"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/twLaptopType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/twLaptopType"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:text="ThinkPad"
            android:drawableLeft="@drawable/button_menu_data"
            android:layout_gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="20sp"
            />

        <TextView
            android:id="@+id/twGradeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/twLaptopType"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:text="Grade 4"
            android:drawableLeft="@drawable/button_menu_grade"
            android:layout_gravity="center"
            />

    </LinearLayout>


</LinearLayout>

