<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserList"
    android:orientation="vertical"
    android:background="@drawable/ic_background"
    android:weightSum="1000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="370">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Felhasználói lista"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/twUserListMain"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="Admin"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:layout_below="@+id/twUserListMain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="500">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lwUserList"/>

    </LinearLayout>
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="130">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:textColor="@drawable/button_text_color"
            android:text="Vissza"
            android:drawableLeft="@drawable/menu_logout"
            android:id="@+id/btUserListBack"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"/>

    </RelativeLayout>

</LinearLayout>