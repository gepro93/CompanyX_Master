<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    android:background="@drawable/selected_list_view_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/twMobileBrandTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/button_menu_mobile"
            android:text="Márka: "
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/twMobileBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@+id/twMobileBrandTitle"
            />

        <TextView
            android:id="@+id/twMobileTypeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/button_menu_data"
            android:text="Típus: "
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_below="@+id/twMobileBrandTitle"/>

        <TextView
            android:id="@+id/twMobileType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/twMobileBrandTitle"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:text="XS"
            android:layout_toRightOf="@+id/twMobileTypeTitle"

            />

        <TextView
            android:id="@+id/twGradeNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/button_menu_grade"
            android:text="Kategória (fizetés besorolás): "
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_below="@+id/twMobileTypeTitle"
            />

        <TextView
            android:id="@+id/twGradeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/twMobileTypeTitle"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:text="Grade 4"
            android:layout_toRightOf="@+id/twGradeNameTitle"
            android:layout_gravity="center"
            />

    </RelativeLayout>


</LinearLayout>

